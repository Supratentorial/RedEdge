<common:BootStrapper x:Class="RedEdge.Desktop.App"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:common="using:Template10.Common"
                     RequestedTheme="Light"
                     xmlns:vm="using:RedEdge.Desktop.ViewModels">

    <Application.Resources>
        <ResourceDictionary>
            <vm:ViewModelLocator x:Key="ViewModelLocator"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles\Custom.xaml" />
                <ResourceDictionary Source="Styles\BrushResources.xaml"/>
                <ResourceDictionary Source="Styles\Dimensions.xaml"/>
                <ResourceDictionary Source="Styles\FormBorder.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</common:BootStrapper>
